{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
  <div class="card-body mt-4">
    <h4>Nova postagem</h4>
    <form action="/admin/postagens/nova" method="POST">
      <label for="titulo">Titulo :</label>
      <input type="text" name="titulo" class="form-control" />
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control" />
      <label for="descricao">Descrição: </label>
      <input type="text" name="descricao" class="form-control" />
      <label for="conteudo">Conteudo: </label>
      <textarea class="form-control" name="conteudo"></textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria" class="custom-select mt-2">
        {{#each categorias}}

          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nnehuma categoria registrada</option>
        {{/each}}
      </select><br />
      <a href=""><button class="btn btn-success mt-2" type="submit">Criar
          postagem</button></a>
    </form>
  </div>
</div>